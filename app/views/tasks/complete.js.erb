if(Page.controller() === 'tasks' && (Page.action() == 'completed' || Page.action() == 'active')){
    $('.task[data-task-id=<%= @task.id %>]').fadeOut();
}
if(Page.controller() === 'tasks' && Page.action() == 'index') {

    if(<%= @task.is_completed %>){
        $('.task[data-task-id=<%= @task.id %>] .complete-task')
        $('.task[data-task-id=<%= @task.id %>] .complete-task').text('Make active');
    } else {
        $('.task[data-task-id=<%= @task.id %>] .complete-task').text('Make completed');
    }
}

